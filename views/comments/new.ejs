<%- include("../partials/header"); %>

  <div class="row text-center justify-content-center">
    <div class="col-12">
      <h1>Add new comment to <%=campground.name%></h1>
    </div>
    <div class="col-md-6 col-lg-4 col-xs-12">
      <form class="" action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-primary" type="submit" name="button">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground._id%>">Go back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
