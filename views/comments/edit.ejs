<%- include("../partials/header"); %>

  <div class="row text-center justify-content-center">
    <div class="col-12">
      <h1>Edit your comment</h1>
    </div>
    <div class="col-md-6 col-lg-4 col-xs-12" >
      <form class="" action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-primary" type="submit" name="button">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground_id%>">Go back</a>
    </div>

  </div>

<%- include("../partials/footer") %>
