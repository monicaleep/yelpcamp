<%- include("../partials/header"); %>

  <div class="row">

    <h1 style="text-align:center">Edit the comment for </h1>
    <div class="" style="width:30%; margin:25px auto">
      <form class="" action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-primary" type="submit" name="button">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground_id%>">Go back</a>
    </div>

  </div>

