<%- include("../partials/header"); %>

  <div class="row justify-content-center text-center">
    <div class="col-md-12">
      <h1 >Create a new campground</h1>
    </div>
    <div class="col-md-6 col-lg-4 col-xs-12">
      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="image url">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="Price per night" min=0.01 step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" placeholder="Description" type="textarea" name="description" value="">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-primary" type="submit" name="button">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>

  </div>



<%- include("../partials/footer") %>
